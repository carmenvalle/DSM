<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="DiagGen.Infraestructure"
		                   namespace="DiagGen.Infraestructure.EN.Diag">
		    
		    
			
				<class name="ProductoNH" table="Producto"> 
				  	
						<id name="IdProducto" column="idProducto" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Nombre" type="string"> 
						<column name="nombre"  not-null="true"/>
					</property>
					<property name="Descripcion" type="string"> 
						<column name="descripcion"  not-null="true"/>
					</property>
					<property name="Precio" type="float"> 
						<column name="precio"  not-null="true"/>
					</property>
					<property name="Imagenes" type="string"> 
						<column name="imagenes"  not-null="true"/>
					</property>
					<property name="Stock" type="integer"> 
						<column name="stock"  not-null="true"/>
					</property>
					<property name="Valoracion" type="double"> 
						<column name="valoracion"  not-null="true"/>
					</property>
			
			
			
			
			
			
			
			
		  			
						<bag name="Favoritos" >
							<key>
							
								
								<column name="FK_idProducto_idProducto"/>
					      	</key>
							<one-to-many class="DiagGen.Infraestructure.EN.Diag.FavoritoNH"/>
					    </bag>
					
			
		  			
						<bag name="Valoraciones" >
							<key>
							
								
								<column name="FK_idProducto_idProducto"/>
					      	</key>
							<one-to-many class="DiagGen.Infraestructure.EN.Diag.ValoracionNH"/>
					    </bag>
					
			
		  			
						<bag name="PedidosItem" >
							<key>
							
								
								<column name="FK_idProducto_idProducto"/>
					      	</key>
							<one-to-many class="DiagGen.Infraestructure.EN.Diag.PedidoItemNH"/>
					    </bag>
					
			
					
					
					
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="ProductoNHReadAllHQL">from ProductoNH</query>
		  <query name="ProductoNHeditarHQL"><![CDATA[FROM ProductoNH]]></query>
		  <query name="ProductoNHbuscarPorPalabraHQL"><![CDATA[select prod FROM ProductoNH AS p WHERE p.Nombre LIKE :Nombre OR p.Descripcion LIKE :Descripcion]]></query>
		  <query name="ProductoNHcategoriaHQL"><![CDATA[SELECT prod FROM ProductoNH prod WHERE prod.Categoria = :categoria]]></query>
		  <query name="ProductoNHporPrecioHQL"><![CDATA[select prod FROM ProductoNH as prod where prod.precio between :min and :max]]></query>
		  <query name="ProductoNHvalorarPorCategoriaHQL"><![CDATA[select prod FROM ProductoNH WHERE prod.Categoria.Nombre = :categoria ORDER BY prod.Valoracion DESC]]></query>
		</hibernate-mapping>
	